.game-die
  game-action-base()
  width 60px
  height 60px
  top 0
  left 0
  border-bottom-right-radius 10px
  overflow hidden

  .game-die-face
    width 50px
    height 50px
    background-color black
    margin auto
    border-radius 5px
    border 1px solid play-med-grey
    box-shadow inset 0 0 9px play-med-grey

@keyframes spin {
  0% { transform: rotate3d(1,1,1,0deg) rotateY(0deg) }
  50% { transform: rotate3d(1,1,1,360deg) rotateY(360deg) }
  100% { transform: rotate3d(1,1,1,720deg) rotateY(720deg) }
}

cube-size = 50px

.game-die-spinning
  perspective none
  perspective-origin 0 0

  .cube
    position relative
    width cube-size
    height cube-size
    margin 0 auto
    transform-origin (cube-size / 2) (cube-size / 2)
    transform-style preserve-3d
    animation spin 1.5s infinite linear

    & > div
      position absolute
      width cube-size
      height cube-size
      border 2px play-med-grey
      box-shadow inset 0 0 (cube-size / 5) play-med-grey
      background-color black

    .cube-symbol
      width 80%
      height 80%
      position relative
      top 50%
      transform translateY(-50%)
      margin auto
      background-size contain
      background-position center
      background-repeat no-repeat

    .cube-chaos
      background-image url("/images/planechase-symbol-chaos.jpg")

    .cube-walk
      background-image url("/images/planechase-symbol-walk.jpg")

    .cube-back
      transform translateZ(-(cube-size / 2)) rotateY(180deg)

    .cube-right
      transform rotateY(-270deg) translateX((cube-size / 2))
      transform-origin top right

    .cube-left
      transform rotateY(270deg) translateX(-(cube-size / 2))
      transform-origin center left

    .cube-top
      transform rotateX(-90deg) translateY(-(cube-size / 2))
      transform-origin top center

    .cube-bottom
      transform rotateX(90deg) translateY((cube-size / 2))
      transform-origin bottom center

    .cube-front
      transform translateZ((cube-size / 2))
