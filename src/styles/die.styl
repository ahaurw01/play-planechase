@keyframes spin {
  0% { transform: rotateX(0) rotateY(0) }
  50% { transform: rotateX(-180deg) rotateY(360deg) }
  100% { transform: rotateX(-360deg) rotateY(720deg) }
}

.game-die-spinning
  perspective none
  perspective-origin 0 0

  .cube
    position relative
    width 200px
    margin 0 auto
    transform-origin 100px 100px
    transform-style preserve-3d
    animation spin 2s infinite linear

    & > div
      position absolute
      width 200px
      height 200px
      border 2px play-med-grey
      box-shadow inset 0 0 40px play-med-grey
      background-color black

    .cube-symbol
      width 80%
      height 80%
      position relative
      top 50%
      transform translateY(-50%)
      margin auto
      background-size contain
      background-position center
      background-repeat no-repeat

    .cube-chaos
      background-image url("/images/planechase-symbol-chaos.jpg")

    .cube-walk
      background-image url("/images/planechase-symbol-walk.jpg")

    .cube-back
      transform translateZ(-100px) rotateY(180deg)

    .cube-right
      transform rotateY(-270deg) translateX(100px)
      transform-origin top right

    .cube-left
      transform rotateY(270deg) translateX(-100px)
      transform-origin center left

    .cube-top
      transform rotateX(-90deg) translateY(-100px)
      transform-origin top center

    .cube-bottom
      transform rotateX(90deg) translateY(100px)
      transform-origin bottom center

    .cube-front
      transform translateZ(100px)

