@require './colors'

// Global
//

body
  margin 0

// Checklist
//

.card-check-icon
  cursor pointer

.card-link
  cursor pointer
  color play-blue

// Card spoiler
//

.card-spoiler
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color play-overlay-grey

.card-spoiler-image
  width 100%
  height 100%
  background-size contain
  background-position center
  background-repeat no-repeat

// Game
//

.game-card-image
  width 100vw
  height 100vh
  background-size contain
  background-position center
  background-repeat no-repeat

.game-button
  position fixed
  width 10%
  height 100px
  top 50%
  transform translateY(-50%)
  color black
  font-size 30px
  border none
  outline none
  cursor pointer
  background-color play-overlay-light-grey

  &.game-button-forward
    right 0
    border-radius 10px 0 0 10px

  &.game-button-back
    left 0
    border-radius 0 10px 10px 0

// Utils
//

.hidden
  display none
